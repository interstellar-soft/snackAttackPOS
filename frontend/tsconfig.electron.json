{
  "compilerOptions": {
    "target": "ES2021",
    "module": "NodeNext",
    "outDir": "dist-electron",
    "rootDir": "electron",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "types": ["node", "electron"],
    "forceConsistentCasingInFileNames": true
  },
  "include": ["electron/**/*.ts"]
}
