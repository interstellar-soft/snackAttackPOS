{
  "name": "aurora-pos-frontend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Aurora POS desktop application",
  "author": {
    "name": "Aurora POS Team",
    "email": "support@example.com"
  },
  "homepage": "https://example.com/aurora-pos",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint .",
    "postinstall": "node ../scripts/ensure-rollup-native.js && node scripts/postinstall-rebuild.mjs",
    "build:electron": "node scripts/build-electron.mjs",
    "build:electron:watch": "node scripts/build-electron.mjs --watch",
    "electron:serve": "wait-on tcp:5173 file:dist-electron/main.js && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "electron:dev": "concurrently -k \"npm:dev\" \"npm:build:electron:watch\" \"npm:electron:serve\"",
    "electron:package": "npm run build && npm run build:electron && electron-builder",
    "electron:rebuild": "electron-rebuild --force --runtime=electron --version=38.2.2"
  },
  "dependencies": {
    "@serialport/parser-readline": "^13.0.0",
    "@tanstack/react-query": "^5.35.5",
    "@tanstack/react-query-devtools": "^5.35.5",
    "@types/react": "^18.2.38",
    "@types/react-dom": "^18.2.18",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "electron-log": "^5.1.4",
    "electron-updater": "^6.1.7",
    "i18next": "^23.7.11",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "13.5.0",
    "react-router-dom": "^6.21.1",
    "recharts": "^2.10.3",
    "serialport": "^13.0.0",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "@electron/rebuild": "^3.5.0",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "38.2.2",
    "electron-builder": "^24.9.1",
    "esbuild": "^0.25.10",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^7.1.9",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.aurorapos.desktop",
    "productName": "Aurora POS",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json"
    ],
    "asarUnpack": [
      "node_modules/@serialport/**"
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "maintainer": "Aurora POS Team <support@example.com>",
      "category": "Utility"
    },
    "publish": [
      {
        "provider": "generic",
        "url": "https://updates.example.com/aurora-pos/"
      }
    ]
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.52.4"
  }
}
